 <div class="progress-group">
     <div class="progress-deposit-bar">
       <ul>
        <li></li>
        <li></li>
        <li class="active"></li>
      </ul>
    </div>
    <div class="progress-deposit">
      <ul >
        <li>Describe Work</li>
        <li>Upload File(s)</li>
        <li>Confirm Deposit</li>
      </ul>
    </div>
  </div> 

<div class="row">
  <div class="col-sm-12">
    <div class="position-page">
      <h2 class="non lower"><%= t('generic_work.thank_you_for_depositing_your_work') %></h2>
        <p class="box-padding emphasis-text"><%= t('generic_work.your_work_will_remain_private_until') %></p>

        <form class="copy-url box-padding align-left">
          <label for="copy-input" >Share your work with the following link:</label>
          <div class="input-group">
            <input type="text" class="form-control"
                value="<%= polymorphic_url([main_app, curation_concern]) %>" placeholder="The work URL path" id="copy-input">
            <span class="input-group-btn">
              <button class="btn btn-primary" type="button" id="copy-button" onclick="copyClick()">
                Copy URL
              </button>
            </span>
          </div>
        </form>

        <div class="top-border">
        
        <%= link_to t("hyrax.dashboard.return_dashboard"),
                    hyrax.dashboard_index_path,
                    type: :button,
                    class: "btn btn-primary dashboard-btn " %>
        
          <div class="box-padding align-left">
          <p class="bold"><%= t('generic_work.make_your_work_citable') %></p>
          <p>Need a DOI to cite your work? Please contact us at
              <a href="mailto:<%=t('email.deepblue')%>"><%=t('email.deepblue')%></a></p>
          </div>
        </div>
    </div>
  </div>
</div>